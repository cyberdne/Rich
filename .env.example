# Example environment variables for the bot
# Copy this file to .env and fill the values before running the bot

# Telegram bot token (required)
BOT_TOKEN=your_bot_token_here

# Comma separated list of admin Telegram IDs (optional but recommended)
ADMIN_IDS=123456789

# OpenAI API key (optional). Not required for local image assets.
OPENAI_API_KEY=

# General environment
NODE_ENV=development
DEBUG_MODE=false
# Bot Configuration
BOT_TOKEN=YOUR_BOT_TOKEN_HERE
ADMIN_IDS=YOUR_USER_ID_HERE,OTHER_ADMIN_IDS
LOG_CHANNEL_ID=YOUR_LOG_CHANNEL_ID_HERE

# AI Services (Optional)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY_HERE

# Environment
DEBUG_MODE=false
NODE_ENV=production

# Auto-fix options
AUTO_FIX_ENABLED=false
AUTO_FIX_RESTORE_ENABLED=false
AUTO_FIX_ERROR_THRESHOLD=20
AUTO_FIX_INTERVAL_MS=300000

# AI Model & Timeout
AI_MODEL=gpt-3.5-turbo
AI_TIMEOUT=60000

# Database & dynamic features
DB_PATH=./database
DYNAMIC_FEATURES_PATH=./data/dynamic_features

# Rate limiter
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_LIMIT=30
RATE_LIMIT_USER_BLOCK_TIMEOUT_MS=600000
